# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{java,xml,yml,groovy}]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.xml]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 2

[*.groovy]
indent_style = space
indent_size = 2
